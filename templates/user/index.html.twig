{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="bg-light p-3">
  <h1> les utilisateurs  </h1>
  </div>
  {% if users | length > 0 %}
    <table class="table">
     <thead>
        <tr>
            <th>Username</th>
            <th>email</th>
            <th>role</th>
            <th></th>
        </tr>
     </thead>
     <tbody>
        {% for user  in users  %}
          <tr>
              <td>{{user.username}}</td>
              <td>{{user.email}}</td>
              <td>{{user.role}}</td>
              <td>
                <a href="{{path('user_remove',{'id': user.id})}}" onclick="return confirm('êtes vous sûr?')" class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
                </a>
              </td>
              <td>
                <a href="{{path('user_edit',{'id': user.id})}}" onclick="return confirm('êtes vous sûr?')" class="btn btn-secondary btn-sm">
                <i class="fas fa-edit"></i>
                </a>
              </td>
          </tr>
        {% endfor %}
     </tbody>
     <tfoot>
        <tr>
        </tr>
     </tfoot>
    </table>
  {% else %}
    <p>Surprise, c'est vide !</p>
{% endif %}
{% endblock %}
